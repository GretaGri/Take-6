<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.take6.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curtainred">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside">

            <EditText
                android:id="@+id/player_1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marlboro"
                android:gravity="center"
                android:hint="@string/playerOne"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingText"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeTeam" />

            <TextView
                android:id="@+id/player_1_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/paddingBottom"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNumbers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/player_2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marlboro"
                android:gravity="center"
                android:hint="Player 2"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingText"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeTeam" />

            <TextView
                android:id="@+id/player_2_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/paddingBottom"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNumbers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/player_3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marlboro"
                android:gravity="center"
                android:hint="Player 3"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingText"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeTeam" />

            <TextView
                android:id="@+id/player_3_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/paddingBottom"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNumbers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/linearLayout3"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/player_4_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marlboro"
                android:gravity="center"
                android:hint="Player 4"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingText"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeTeam" />

            <TextView
                android:id="@+id/player_4_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/paddingBottom"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNumbers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <EditText
                android:id="@+id/player_5_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marlboro"
                android:gravity="center"
                android:hint="Player 5"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingText"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeTeam" />

            <TextView
                android:id="@+id/player_5_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/paddingBottom"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNumbers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout">

            <LinearLayout
                android:id="@+id/linearLayout12"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/marginBottom"
                    android:padding="4dp"
                    android:src="@drawable/onebull" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:layout_marginBottom="@dimen/marginBottom"
                    android:src="@drawable/twobulls" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:layout_marginBottom="@dimen/marginBottom"
                    android:src="@drawable/threebulls" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:layout_marginBottom="@dimen/marginBottom"
                    android:src="@drawable/fivebulls" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:layout_marginRight="@dimen/marginBottom"
                    android:src="@drawable/sevenbulls" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/linearLayout12">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="serif"
                    android:onClick="minusOnePoint"
                    android:text="@string/minus_1_point"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="serif"
                    android:onClick="minusTwoPoints"
                    android:text="@string/minus_2_points"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="serif"
                    android:onClick="minusThreePoints"
                    android:text="@string/minus_3_points"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/minus_5_points"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="serif"
                    android:onClick="minusFivePoints"
                    android:text="@string/minus_5_points"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="serif"
                    android:onClick="minusSevenPoints"
                    android:text="@string/minus_7_points"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/linearLayout7"
            app:layout_constraintVertical_chainStyle="spread_inside">

            <EditText
                android:id="@+id/player_6_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marlboro"
                android:gravity="center"
                android:hint="Player 6"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingText"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeTeam" />

            <TextView
                android:id="@+id/player_6_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/paddingBottom"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNumbers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/linearLayout8"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/player_7_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marlboro"
                android:gravity="center"
                android:hint="Player 7"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingText"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeTeam" />

            <TextView
                android:id="@+id/player_7_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/paddingBottom"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNumbers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout9">

            <EditText
                android:id="@+id/player_8_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marlboro"
                android:gravity="center"
                android:hint="Player 8"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingText"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeTeam" />

            <TextView
                android:id="@+id/player_8_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/paddingBottom"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNumbers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/player_9_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marlboro"
                android:gravity="center"
                android:hint="Player 9"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingText"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeTeam" />

            <TextView
                android:id="@+id/player_9_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/paddingBottom"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNumbers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

            <EditText
                android:id="@+id/player_10_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marlboro"
                android:gravity="center"
                android:hint="Player 10"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingText"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeTeam" />

            <TextView
                android:id="@+id/player_10_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/paddingBottom"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNumbers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout16"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="@dimen/resetMarginBottom"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout10"
            app:layout_constraintStart_toEndOf="@+id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout15">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/marginRight"
                android:layout_marginRight="@dimen/marginRight"
                android:background="@drawable/my_button"
                android:fontFamily="serif"
                android:onClick="resetScore"
                android:text="@string/reset"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/my_button"
                android:fontFamily="serif"
                android:onClick="gameEnd"
                android:text="@string/end_game"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>